        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.28.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.7",
        "mangle-css-class-webpack-plugin": "^5.0.7",
        "postcss": "^8.4.5",
        "prettier": "^2.5.1",
        "tailwindcss": "^3.0.12"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "yarn prettier:fix",
            "yarn lint"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    }
